{% extends 'bases/base_blue.twig' %}
{% block main %}

<div class="row">
    <div class="col-sm-2">
        {% include 'bases/sidebar_blue.twig' %}
    </div>
    <div class="col-sm-10">
        <div class="panel panel-default row choose-panel">
            <div class="col-xs-12">
                <h2>Negozio: {{ nome }}</h2>
                <h5>Orari di apertura:</h5>
		<p>{{ orariApertura | raw }}</p>
		<h5>Posizione:</h5>
		<iframe
		  width="100%"
		  height="450"
		  frameborder="0" style="border:0"
		  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA3G19ydlk7Vk5d5Yjht-DRGjctSW-SUiQ&q={{ indirizzo | split(" ") | join("+") }}" allowfullscreen>
		</iframe>
            </div>
        </div>
    </div>
</div>


{% endblock %}
