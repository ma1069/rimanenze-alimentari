{% extends 'bases/base_blue.twig' %}
{% block main %}

        <div class="panel panel-default row choose-panel">
            <div class="col-xs-12">
		{% if id != "" %}
                <h2>Modifica utente</h2>
		{% else %}
		<h2>Inserisci utente</h2>
		{% endif %}
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <form id="form-insert" class="form-horizontal" method="POST" action="do/adm_update.php">
                            <fieldset>
				{% if id != "" %}
				<div class="form-group">
					<label for="id" class="col-sm-5 control-label">ID</label>
					<div class="col-sm-7">
						<input type="text" readonly value="{{ id }}" class="form-control id="id" name="id"/>
					</div>
				</div>
				{% endif %}
				<div class="form-group">
					<label for="nome" class="col-sm-5 control-label">Nome</label>
					<div class="col-sm-7">
						<input type="text" value="{{ nome }}" class="form-control id="nome" name="nome"/>
					</div>
				</div>
				<div class="form-group">
					<label for="pass" class="col-sm-5 control-label">Password</label>
					<div class="col-sm-7">
						<input type="password" value="" class="form-control id="pass" name="pass"/>
					</div>
				</div>
				<div class="form-group">
					<label for="email" class="col-sm-5 control-label">Email</label>
					<div class="col-sm-7">
						<input type="email" value="{{ email }}" class="form-control id="email" name="email"/>
					</div>
				</div>
				<div class="form-group">
					<label for="addr" class="col-sm-5 control-label">Indirizzo</label>
					<div class="col-sm-7">
						<input type="text" value="{{ indirizzo }}" class="form-control id="addr" name="addr"/>
					</div>
				</div>
				<div class="form-group">
					<label for="tipo" class="col-sm-5 control-label">Tipo</label>
					<div class="col-sm-7">
						<select name="tipo" id="tipo" class="form-control">
							<option value="NEG" {% if tipo == 'NEG' %}selected="selected"{% endif %}>Negozio</option>
							<option value="UTE" {% if tipo == 'UTE' %}selected="selected"{% endif %}>Azienda</option>
						</select>
					</div>
				</div>
                                
                            </fieldset>
                            <div class="form-group">
                                <div class="col-sm-10 col-sm-offset-2">
                                    <button class="btn btn-default" onclick="javascript:window.history.back()">Annulla</button>
				{% if id == "" %}
                                    <button type="submit" class="btn btn-primary">Inserisci</button>
				{% else %}
                                    <button type="submit" class="btn btn-primary">Aggiorna</button>
				{% endif %}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

